@model IEnumerable<AppMVC_FINAL.Entity.ComprobanteDetalle>

@{
    ViewBag.Title = "Index";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<h2>Resumen de las Ventas de Licores</h2>
<link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
<script type='text/javascript' src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="~/Scripts/jsEventos.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<style>
    th {
    background-color:#428BCA;
    color: white;
} 
</style>
<p>
    <button class="btn btn-success btn-create" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-file"></i> Nueva Venta</button>

</p>
<table class="table table-bordered">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.ComprobanteId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductoId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            Descripcion Producto
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PrecioUitario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Igv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            Fecha de Venta
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.FechaIni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaFin)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.Cliente)
        </th>*@
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.ComprobanteId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductoId)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreProducto)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.PrecioUitario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Igv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaRegistro)
        </td>
       @* <td>
        @Html.DisplayFor(modelItem => item.FechaIni)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaFin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente)
        </td>*@
        <td>
            <button class="btn btn-info btn-details" data-codigo="@item.ComprobanteId" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-eye-open"></i> </button>
            <button class="btn btn-warning btn-edit" data-codigo="@item.ComprobanteId" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-pencil"></i> </button>
            <button class="btn btn-danger btn-delete" data-codigo="@item.ComprobanteId" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-trash"></i> </button>
        </td>
    </tr>
}

</table>
<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog" style="width:900px;">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Facturación</h4>
                </div>
                <div id="modal" class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> Cancelar</button>
                </div>
            </div>

        </div>
    </div>

</div>

<footer>
    <hr />
    <p class="text-primary">Alumno: Trebejo Loayza Waldo</p>
</footer>